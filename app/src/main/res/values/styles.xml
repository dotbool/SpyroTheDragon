<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="long_text">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:justificationMode">inter_word</item>
        <item name="android:fontFamily">@font/luckiestguy_regular</item>
    </style>

    <style name="h1">
        <item name="android:textSize">48sp</item>
        <item name="android:layout_marginBottom">24sp</item>
    </style>
    <style name="h2">
        <item name="android:textSize">40sp</item>
        <item name="android:layout_marginBottom">24sp</item>
    </style>
    <style name="h3">
        <item name="android:textSize">32sp</item>
        <item name="android:layout_marginBottom">24sp</item>
    </style>
    <style name="long_text.h4">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginBottom">24sp</item>
    </style>
    <style name="h5">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">24sp</item>
    </style>
    <style name="h6">
        <item name="android:textSize">8sp</item>
        <item name="android:layout_marginBottom">24sp</item>
    </style>

    <style name="welcome_text">
        <item name="android:fontFamily">@font/indie_flower_regular</item>
        <item name="android:justificationMode">inter_word</item>
        <item name="android:padding">40dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>